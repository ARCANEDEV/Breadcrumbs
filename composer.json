{
    "name":        "arcanedev/breadcrumbs",
    "description": "A simple way to create breadcrumbs.",
    "homepage":    "https://github.com/ARCANEDEV/Breadcrumbs",
    "keywords":    ["laravel", "breadcrumbs", "html", "twitter", "bootstrap", "zurb", "foundation", "navigation"],
    "authors":     [
        {
            "name":     "ARCANEDEV",
            "email":    "arcanedev.maroc@gmail.com",
            "homepage": "https://github.com/arcanedev-maroc",
            "role":     "Developer"
        }
    ],
    "type":    "library",
    "license": "MIT",
    "require": {
        "php": "^7.3|^8.0",
        "arcanedev/support": "^9.0"
    },
    "require-dev": {
        "orchestra/testbench": "^7.0",
        "phpunit/phpunit": "^9.3.3"
    },
    "autoload": {
        "psr-4": {
            "Arcanedev\\Breadcrumbs\\": "src/"
        },
        "files": ["helpers.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Arcanedev\\Breadcrumbs\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "coverage": "phpunit --coverage-html build/coverage/html"
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "7.x-dev"
        },
        "laravel": {
            "providers": [
                "Arcanedev\\Breadcrumbs\\BreadcrumbsServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
