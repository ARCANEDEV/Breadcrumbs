{
    "name":        "arcanedev/breadcrumbs",
    "description": "A simple way to create breadcrumbs.",
    "homepage":    "https://github.com/ARCANEDEV/Breadcrumbs",
    "keywords":    ["laravel", "breadcrumbs", "html", "twitter", "bootstrap", "zurb", "foundation", "navigation"],
    "authors":     [
        {
            "name":     "ARCANEDEV",
            "email":    "arcanedev.maroc@gmail.com",
            "homepage": "https://github.com/arcanedev-maroc",
            "role":     "Developer"
        }
    ],
    "type":    "library",
    "license": "MIT",
    "require": {
        "php":               ">=7.0",
        "arcanedev/support": "~4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~6.0",
        "phpunit/phpcov":  "~4.0"
    },
    "autoload": {
        "psr-4": {
            "Arcanedev\\Breadcrumbs\\": "src/"
        },
        "files": ["helpers.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Arcanedev\\Breadcrumbs\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Arcanedev\\Breadcrumbs\\BreadcrumbsServiceProvider"
            ],
            "aliases": {
                "Breadcrumbs": "Arcanedev\\Breadcrumbs\\Facades\\Breadcrumbs"
            }
        }
    },
    "scripts": {
        "testbench": "composer require --dev \"orchestra/testbench-browser-kit=~3.0\""
    }
}
